<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.co.iei.model.member.dao.MemberDao">
	<insert id="insertMember">
		insert into member
		values(member_seq.nextval,#{memberId},#{memberPw},#{memberName},#{memberPhone},#{memberAddr},#{memberEmail},#{birthDate},#{memberGender},#{memberJob},#{memberMBTI},3,#{memberImgPath},0,0,null)
	</insert>
	
	<select id="selectOneMember" resultType="member">
		select * from member where member_id = #{memberId}
		<if test="memberPw != null">
			and member_pw = #{memberPw}
		</if>
	</select>
</mapper>
